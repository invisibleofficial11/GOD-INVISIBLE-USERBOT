

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $INVISIBLE_REPO == "INVISIBLEBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0RBUkstTEVHRU5ELVBSTy9QUk8tRFUHJJBR09OUk9CT09UL2FyY2hpdmUvbWFpbi56aXA=" | base64 -d
    elif [[ $INVISIBLE_REPO == "INVISIBLEBOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL0RBUkstTEVHRU5ELVBSTy9QUk8tRFUHJJBR09OUk9CT09UL2FyY2hpdmUvbWFpbi56aXA=" | base64 -d
    elif [[ $INVISIBLE_REPO =~ $regex ]]
    then
        if [[ $INVISIBLE_REPO_BRANCH ]]
        then
            echo "${INVISIBLE_REPO}/archive/${INVISIBLE_REPO_BRANCH}.zip"
        else
            echo "${INVISIBLE_REPO}/archive/Invisible.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL0RBUkstTEVHRU5ELVBSTy9QUk8tRFUHJJBR09OUk9CT09UL2FyY2hpdmUvbWFpbi56aXA=" | base64 -d
    fi
}


_invisible_bot () {
    local zippath
    zippath="Invisible.zip"
    echo "  üî∞ Downloading Pro Invisible-LegendBot Source Code... üî∞"
    wget -q $(_get_repolink) -O "$zippath"
    echo "  üìçUnpacking Data...üìç"
    INVISIBLEPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo " üèÖ Download Complete Now Installing üèÖ"
    echo "  ‚ú® INSTALLING INVISIBLE LEGENDBOT ‚ú®"
    rm -rf "$zippath"
    sleep 5
    cd $INVISIBLEPATH
    echo "    ‚öúÔ∏èStarting Invisible Legend·∫û√∏t‚öúÔ∏è     "
    echo " ‚ô•Ô∏è NOW WAIT 3 MIN INSTALLING ALL PLUGIN ‚ô•Ô∏è"
    echo " ‚ô•Ô∏è HO RHA HE BETA RUK JA HO GYA JA TG KI MARDE ‚ô•Ô∏è"

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_invisible_bot
